@inject NavigationManager Navigation

<div class="error-container">
    <div class="error-content">
        <div class="error-header">
            <span class="error-icon">⚠️</span>
            <h2>An Error Occurred</h2>
        </div>
        
        <div class="error-details">
            <div class="error-section">
                <strong>Exception Type:</strong>
                <p>@Exception.GetType().FullName</p>
            </div>

            <div class="error-section">
                <strong>Message:</strong>
                <p>@Exception.Message</p>
            </div>
            
            @if (Exception.InnerException != null)
            {
                <div class="error-section">
                    <strong>Inner Exception:</strong>
                    <p class="inner-ex">@Exception.InnerException.GetType().Name: @Exception.InnerException.Message</p>
                </div>
            }

            <div class="error-section">
                <strong>Source:</strong>
                <p>@(Exception.Source ?? "N/A")</p>
            </div>

            <div class="error-section">
                <strong>Target Site:</strong>
                <p>@(Exception.TargetSite?.ToString() ?? "N/A")</p>
            </div>

            <div class="error-section">
                <strong>Timestamp:</strong>
                <p>@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")</p>
            </div>
            
            @if (!string.IsNullOrEmpty(Exception.StackTrace))
            {
                <div class="error-section">
                    <strong>Stack Trace:</strong>
                    <pre class="stack-trace">@Exception.StackTrace</pre>
                </div>
            }

            @if (Exception.Data.Count > 0)
            {
                <div class="error-section">
                    <strong>Additional Data:</strong>
                    <pre class="stack-trace">@string.Join(Environment.NewLine, Exception.Data.Keys.Cast<object>().Select(k => $"{k}: {Exception.Data[k]}"))</pre>
                </div>
            }
        </div>
        
        <div class="error-actions">
            <button class="btn-reload" @onclick="HandleReload">Reload</button>
        </div>
    </div>
</div>

@code {
    [Parameter, EditorRequired] public Exception Exception { get; set; } = default!;
    [Parameter] public EventCallback OnReload { get; set; }

    private async Task HandleReload()
    {
        if (OnReload.HasDelegate)
        {
            await OnReload.InvokeAsync();
        }
        else
        {
            Navigation.NavigateTo("/", forceLoad: true);
        }
    }
}

