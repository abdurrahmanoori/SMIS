<MudAppBar Elevation="1">
    <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" />
    <MudText Typo="Typo.h6">ðŸ“Š SMIS</MudText>
    <MudSpacer />
    <MudIconButton Icon="@Icons.Material.Filled.Search" Color="Color.Inherit" />
    <MudIconButton Icon="@Icons.Material.Filled.Notifications" Color="Color.Inherit" />
    <MudIconButton Icon="@Icons.Material.Filled.Person" Color="Color.Inherit" />
</MudAppBar>

<MudDrawer @bind-Open="@drawerOpen" Elevation="1" Variant="@DrawerVariant.Temporary">
    <MudDrawerHeader>
        <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="2">
            <MudAvatar>ðŸ‘¤</MudAvatar>
            <MudStack Spacing="0">
                <MudText Typo="Typo.body1">Admin User</MudText>
                <MudText Typo="Typo.body2" Color="Color.Secondary">Administrator</MudText>
            </MudStack>
        </MudStack>
    </MudDrawerHeader>
    <MudNavMenu>
        @foreach (var item in MenuItems)
        {
            <MudNavLink Href="@item.Url" Icon="@item.Icon" OnClick="@CloseDrawer">@item.Text</MudNavLink>
        }
    </MudNavMenu>
    <MudSpacer />
    <MudDivider />
    <MudNavMenu>
        <MudNavLink Icon="@Icons.Material.Filled.Logout">Logout</MudNavLink>
    </MudNavMenu>
</MudDrawer>

@code {
    private bool drawerOpen = false;
    
    private List<MenuItem> MenuItems = new()
    {
        new MenuItem { Text = "Dashboard", Icon = Icons.Material.Filled.Home, Url = "" },
        new MenuItem { Text = "Counter", Icon = Icons.Material.Filled.Add, Url = "counter" },
        new MenuItem { Text = "Weather", Icon = Icons.Material.Filled.Cloud, Url = "weather" },
        new MenuItem { Text = "Data Grid", Icon = Icons.Material.Filled.GridOn, Url = "datagrid" },
        new MenuItem { Text = "Charts", Icon = Icons.Material.Filled.BarChart, Url = "charts" },
        new MenuItem { Text = "Forms", Icon = Icons.Material.Filled.Description, Url = "simpleform" }
    };
    
    private void ToggleDrawer()
    {
        drawerOpen = !drawerOpen;
    }
    
    private void CloseDrawer()
    {
        drawerOpen = false;
    }

    public class MenuItem
    {
        public string Text { get; set; }
        public string Icon { get; set; }
        public string Url { get; set; }
    }
}