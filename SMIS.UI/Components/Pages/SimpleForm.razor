@page "/simpleform"

<MudContainer MaxWidth="MaxWidth.Small" Class="mt-4">
    <MudCard>
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h5">Simple Form</MudText>
                <MudText Typo="Typo.body2">Basic MudBlazor components demo</MudText>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <MudGrid>
                <MudItem xs="12" sm="6">
                    <MudTextField @bind-Value="name" Label="Name" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" sm="6">
                    <MudTextField @bind-Value="email" Label="Email" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" sm="6">
                    <MudDatePicker @bind-Date="selectedDate" Label="Date" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" sm="6">
                    <MudSelect @bind-Value="selectedCategory" Label="Category" Variant="Variant.Outlined">
                        @foreach (var category in categories)
                        {
                            <MudSelectItem Value="@category">@category</MudSelectItem>
                        }
                    </MudSelect>
                </MudItem>
                <MudItem xs="12">
                    <MudTextField @bind-Value="message" Label="Message" Variant="Variant.Outlined" Lines="3" />
                </MudItem>
                <MudItem xs="12">
                    <MudCheckBox @bind-Value="isActive" Label="Active" />
                </MudItem>
            </MudGrid>
        </MudCardContent>
        <MudCardActions>
            <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="SubmitForm">Submit</MudButton>
            <MudButton Variant="Variant.Outlined" OnClick="ClearForm">Clear</MudButton>
        </MudCardActions>
    </MudCard>
</MudContainer>

@code {
    [Inject] private ISnackbar Snackbar { get; set; }
    
    private string name = "";
    private string email = "";
    private DateTime? selectedDate;
    private string selectedCategory = "";
    private string message = "";
    private bool isActive = false;
    
    private List<string> categories = new() { "General", "Support", "Feedback", "Bug Report" };

    private void SubmitForm()
    {
        Snackbar.Add("Form submitted successfully!", Severity.Success);
    }
    
    private void ClearForm()
    {
        name = "";
        email = "";
        selectedDate = null;
        selectedCategory = "";
        message = "";
        isActive = false;
    }
}