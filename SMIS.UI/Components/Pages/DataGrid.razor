@page "/datagrid"

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-4">
    <MudCard>
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h5">Simple Data Grid</MudText>
                <MudText Typo="Typo.body2">Basic data grid demo</MudText>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <MudTable Items="@gridData" Hover="true" Striped="true" Dense="true">
                <HeaderContent>
                    <MudTh>ID</MudTh>
                    <MudTh>Name</MudTh>
                    <MudTh>Email</MudTh>
                    <MudTh>Course</MudTh>
                </HeaderContent>
                <RowTemplate>
                    <MudTd DataLabel="ID">@context.Id</MudTd>
                    <MudTd DataLabel="Name">@context.Name</MudTd>
                    <MudTd DataLabel="Email">@context.Email</MudTd>
                    <MudTd DataLabel="Course">@context.Course</MudTd>
                </RowTemplate>
            </MudTable>
        </MudCardContent>
    </MudCard>
</MudContainer>

@code {
    private List<StudentData> gridData = new();

    protected override void OnInitialized()
    {
        gridData = new List<StudentData>
        {
            new StudentData { Id = 1, Name = "John Doe", Email = "john@test.com", Course = "Computer Science" },
            new StudentData { Id = 2, Name = "Jane Smith", Email = "jane@test.com", Course = "Mathematics" },
            new StudentData { Id = 3, Name = "Mike Johnson", Email = "mike@test.com", Course = "Physics" },
            new StudentData { Id = 4, Name = "Sarah Wilson", Email = "sarah@test.com", Course = "Chemistry" },
            new StudentData { Id = 5, Name = "David Brown", Email = "david@test.com", Course = "Biology" }
        };
    }

    public class StudentData
    {
        public int Id { get; set; }
        public string Name { get; set; }
        public string Email { get; set; }
        public string Course { get; set; }
    }
}