@page "/"

<SfMessage Severity="MessageSeverity.Success" Visible="@showMessage" Closed="OnMessageClosed">
    Toast shown at @messageTime
</SfMessage>

<div class="home-container">
    <SfCard>
        <CardHeader Title="Welcome to SMIS" SubTitle="Student Management Information System"></CardHeader>
        <CardContent>
            <div class="card-content">
                <h3>Hello, world!</h3>
                <p>Welcome to your new Syncfusion Blazor MAUI app with modern UI components.</p>
                
                <div class="button-group">
                    <SfButton IsPrimary="true" Content="Get Started"></SfButton>
                    <SfButton Content="Learn More" CssClass="e-outline"></SfButton>
                    <SfButton Content="Show Toast" CssClass="e-success" OnClick="ShowToast"></SfButton>
                </div>
            </div>
        </CardContent>
    </SfCard>

    <div class="stats-section">
        <div class="stats-grid">
            <SfCard>
                <CardContent>
                    <div class="stat-card">
                        <h4>Students</h4>
                        <h2>1,234</h2>
                    </div>
                </CardContent>
            </SfCard>
            
            <SfCard>
                <CardContent>
                    <div class="stat-card">
                        <h4>Courses</h4>
                        <h2>56</h2>
                    </div>
                </CardContent>
            </SfCard>
            
            <SfCard>
                <CardContent>
                    <div class="stat-card">
                        <h4>Faculty</h4>
                        <h2>89</h2>
                    </div>
                </CardContent>
            </SfCard>
        </div>
    </div>
</div>

<style>
    .home-container {
        padding: 20px;
        max-width: 1200px;
        margin: 0 auto;
    }
    
    .card-content {
        text-align: center;
        padding: 20px;
    }
    
    .button-group {
        margin-top: 20px;
        display: flex;
        gap: 15px;
        justify-content: center;
    }
    
    .stats-section {
        margin-top: 30px;
    }
    
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
    }
    
    .stat-card {
        text-align: center;
        padding: 20px;
    }
    
    .stat-card h4 {
        margin: 0;
        color: #666;
    }
    
    .stat-card h2 {
        margin: 10px 0 0 0;
        color: #333;
        font-size: 2.5em;
    }
</style>

@code {
    private bool showMessage = false;
    private string messageTime = "";

    private void ShowToast()
    {
        messageTime = DateTime.Now.ToString("HH:mm:ss");
        showMessage = true;
        StateHasChanged();
    }

    private void OnMessageClosed()
    {
        showMessage = false;
    }
}
