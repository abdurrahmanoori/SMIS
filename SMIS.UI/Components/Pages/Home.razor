@page "/"

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-4">
    <MudCard>
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h4">Welcome to SMIS</MudText>
                <MudText Typo="Typo.body2">Student Management Information System</MudText>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <MudStack AlignItems="AlignItems.Center" Spacing="3">
                <MudText Typo="Typo.h5">Hello, world!</MudText>
                <MudText Typo="Typo.body1">Welcome to your new MudBlazor MAUI app with modern UI components.</MudText>
                <MudStack Row="true" Spacing="2">
                    <MudButton Variant="Variant.Filled" Color="Color.Primary">Get Started</MudButton>
                    <MudButton Variant="Variant.Outlined">Learn More</MudButton>
                </MudStack>
            </MudStack>
        </MudCardContent>
    </MudCard>

    <MudGrid Class="mt-4">
        <MudItem xs="12" sm="4">
            <MudCard>
                <MudCardContent>
                    <MudStack AlignItems="AlignItems.Center">
                        <MudText Typo="Typo.h6" Color="Color.Secondary">Students</MudText>
                        <MudText Typo="Typo.h3">1,234</MudText>
                    </MudStack>
                </MudCardContent>
            </MudCard>
        </MudItem>
        <MudItem xs="12" sm="4">
            <MudCard>
                <MudCardContent>
                    <MudStack AlignItems="AlignItems.Center">
                        <MudText Typo="Typo.h6" Color="Color.Secondary">Courses</MudText>
                        <MudText Typo="Typo.h3">56</MudText>
                    </MudStack>
                </MudCardContent>
            </MudCard>
        </MudItem>
        <MudItem xs="12" sm="4">
            <MudCard>
                <MudCardContent>
                    <MudStack AlignItems="AlignItems.Center">
                        <MudText Typo="Typo.h6" Color="Color.Secondary">Faculty</MudText>
                        <MudText Typo="Typo.h3">89</MudText>
                    </MudStack>
                </MudCardContent>
            </MudCard>
        </MudItem>
    </MudGrid>
</MudContainer>
