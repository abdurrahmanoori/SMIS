@page "/charts"

<MudContainer MaxWidth="MaxWidth.Medium" Class="mt-4">
    <MudCard>
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h5">Simple Charts</MudText>
                <MudText Typo="Typo.body2">Basic chart components demo</MudText>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <MudText Typo="Typo.h6" Class="mb-4">Sample Data Chart</MudText>
            <MudChart ChartType="ChartType.Bar" ChartSeries="@Series" XAxisLabels="@XAxisLabels" Width="100%" Height="300px"/>
        </MudCardContent>
    </MudCard>
</MudContainer>

@code {
    private List<ChartSeries> Series = new();
    private string[] XAxisLabels = { "Jan", "Feb", "Mar", "Apr", "May", "Jun" };

    protected override void OnInitialized()
    {
        Series = new List<ChartSeries>
        {
            new ChartSeries { Name = "Sales", Data = new double[] { 35, 28, 42, 38, 45, 52 } }
        };
    }
}