@page "/counter"

<MudContainer MaxWidth="MaxWidth.Small" Class="mt-4">
    <MudCard>
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h5">Counter Demo</MudText>
                <MudText Typo="Typo.body2">Simple counter with MudBlazor components</MudText>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <MudStack AlignItems="AlignItems.Center" Spacing="4">
                <MudText Typo="Typo.h4">Current Count: @currentCount</MudText>
                <MudStack Row="true" Spacing="2">
                    <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="IncrementCount">Increment</MudButton>
                    <MudButton Variant="Variant.Outlined" OnClick="DecrementCount">Decrement</MudButton>
                    <MudButton Variant="Variant.Filled" Color="Color.Error" OnClick="ResetCount">Reset</MudButton>
                </MudStack>
            </MudStack>
        </MudCardContent>
    </MudCard>
</MudContainer>

@code {
    [Inject] private ISnackbar Snackbar { get; set; }
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
        Snackbar.Add($"Count incremented to {currentCount}", Severity.Success);
    }
    
    private void DecrementCount()
    {
        if (currentCount > 0)
        {
            currentCount--;
            Snackbar.Add($"Count decremented to {currentCount}", Severity.Info);
        }
    }
    
    private void ResetCount()
    {
        currentCount = 0;
        Snackbar.Add("Counter reset to 0", Severity.Warning);
    }
}
